<main role="main" class="container">
    <h1>Tambah Data Vendor</h1>
    <div class="card shadow col-md-6">
        <div class="card-header">
            <h4 class="text-primary">Detail Vendor</h4>
        </div>
        <div class="card-body">
            <form action="/AddVendor" method="post">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="nama" class="form-label">Nama</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="nama" id="nama" placeholder="Masukkan Nama" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="pegawai" class="form-label">Pegawai</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="pegawai" id="pegawai" placeholder="Masukkan Pegawai" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="kontak" class="form-label">Kontak</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="kontak" id="kontak" placeholder="Masukkan Kontak" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="alamat" class="form-label">Alamat</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="alamat" id="alamat" placeholder="Masukkan Alamat" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <input type="submit" value="Kirim" class="btn btn-primary">
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>